{
  "name": "Instacart Origin Indicator (Massive Brand Lists)",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Tags Instacart items with üçÅ or ‚ùå, scanning .com & .ca. Includes huge brand arrays + debugging.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.instacart.com/*",
    "https://www.instacart.ca/*",
    "https://instacart.com/*",
    "https://instacart.ca/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.instacart.com/*",
        "https://www.instacart.ca/*",
        "https://instacart.com/*",
        "https://instacart.ca/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ]
}
